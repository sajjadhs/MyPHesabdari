@page "/account/login"
@model MyPHesabdari.Pages.Account.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.Extensions.Localization.IStringLocalizer<MyPHesabdari.SharedRes> L
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login To Applcation</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5 text-center">
        @if (User.Identity.IsAuthenticated)
        {
            <p>Welcome, </p><b>@User.Identity.Name</b>
        }
        else
        {
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            @L["LoginToApplication"]
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <span class="validation-message">@Html.ValidationSummary()</span>
                            </div>
                            <form asp-action="post" class="">
                                <div class="form-group">
                                    <label asp-for="Name" class="col-sm-2">@L["UserName"]</label>
                                    <div class="col-sm-10">
                                        <input asp-for="Name" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="col-sm-2">@L["Password"]</label>
                                    <div class="col-sm-10">
                                        <input asp-for="Password" type="password" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <div class="offset-sm-2 col-sm-10">
                                        <div class="custom-checkbox">
                                            <label asp-for="RememberMe">
                                                <input asp-for="RememberMe" type="checkbox" class="form-control" />
                                                @L["RememberMe"]
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">@L["Login"]</button>
                                </div>
                                <input type="hidden" asp-for="ReturnUrl" />
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            ...
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <form asp-page-handler="google" method="post">
                                    <button type="submit" class="btn btn-primary"><span><img src="img/google.jpg" style="width:32px" /></span>@L["LoginWithGoogle"]</button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
</body>
</html>

@{
}
